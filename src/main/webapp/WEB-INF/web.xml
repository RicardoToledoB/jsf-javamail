    <!-- ERRORES DE PAGINA -->
    
   
    <error-page>
        <!-- Forbidden directory listing -->
        <error-code>403</error-code>
        <location>/error403.xhtml</location>
    </error-page>
    <error-page>
        <!-- Missing resource -->
        <error-code>404</error-code>
        <location>/error404.xhtml</location>
    </error-page>
    
